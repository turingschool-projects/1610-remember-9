<div class='header-container'>
  <h1 class='header'>Reminders:</h1>
</div>
{{#if model}}
  {{#each model as |reminder|}}
    {{reminder-item reminder=reminder}}
  {{/each}}
  {{else}}
    <p class='no-reminder-msg'>You don't have any reminders yet!</p>
    {{#link-to 'reminders.new'}}
      <button class='add-reminder-link-btn'>Add Reminder</button>
    {{/link-to}}
{{/if}}

{{outlet}}
